<label for="filter-name">Search by name</label>
{{input id="filter-name" value=name}}
<br/>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>Friends Since</th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |friend|}}

        <tr>
            <td>
                {{#link-to	'friend'	friend.id}}{{friend.name}}{{/link-to}}
            </td>
            <td>
                {{friend.lastname}}
            </td>
            <td>
                {{moment-format friend.friendsSince 'YYYY-MM-DD'}}
            </td>
            <td>
                <button>{{#link-to	'friend'	friend.id}}Edit{{/link-to}}</button>
            </td>
        </tr>
        {{/each}} {{outlet}}
    </tbody>
</table>

<button {{action 'new'}}>Create New Friend</button>
<br/>

