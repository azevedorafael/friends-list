<button {{action	'new'}}>Create New Friend</button>
<br/>

<label for="filter-name">Search by name</label>
{{input id="filter-name" value=name}}
<br/>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>Friends Since</th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |friend|}}
        <tr>
            <td>
              	{{#link-to	'friend'	friend.id}}{{friend.name}}{{/link-to}}
            </td>
            <td>
                {{friend.lastName}}
            </td>
            <td>
                {{friend.friendsSince}}
            </td>
        </tr>
        {{/each}} {{outlet}}
    </tbody>
</table>


